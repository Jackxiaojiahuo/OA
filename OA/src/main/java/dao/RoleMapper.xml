<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="dao.RoleDao">
    <!-- 新增角色 -->
    <insert id="addRole" parameterType="role">
        insert into role(role_name,role_sn,role_description) value(#{role_name},#{role_sn},#{role_description})
    </insert>
    <!-- 修改角色信息 -->
    <update id="updateRole" parameterType="role">
    	update role set role_name=#{role_name},role_sn=#{role_sn},role_description=#{role_description} where role_id=#{role_id}    
    </update>
    <!-- 删除角色信息 -->
    <delete id="delRole" parameterType="Integer">
        delete from role where role_id=#{role_id}
    </delete>
    <!-- 查询角色列表 -->
    <select id="findAllRole" parameterType="map" resultType="role">
		select * from role
		<if test="index!=null">
			 limit #{index},#{size}    
		</if>
    </select>
    <!-- 查询角色列表数量 -->
    <select id="findAllRole_count" resultType="int">
        select count(*) from role
    </select>
    <!-- 根据编号查询角色 -->
    <select id="findRoleById" parameterType="Integer" resultType="role">
		select * from role where role_id=#{role_id}        
    </select>
</mapper>
